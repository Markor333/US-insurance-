with open("insurance.csv") as insurance_data:
    insurance_file = csv.DictReader(insurance_data, delimiter = ",")

    cost_list = []
    for row in insurance_file:
        cost_list.append(row['charges'])

age_cost = dict(zip(cost_list, age_list))

sortedbyvalue = {k: v for k, v in sorted(age_cost.items(), key = lambda v: v[1])}

# x axis values
x = sortedbyvalue.values()
# corresponding y axis values
y = sortedbyvalue.keys()
  
# plotting the points 
plt.plot(x, y)
  
# naming the x axis
plt.xlabel('x - Age')
# naming the y axis
plt.ylabel('y - Charges')
  
# giving a title to my graph
plt.title('Charges vs. age')
plt.show()
